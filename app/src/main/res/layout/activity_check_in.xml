<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/outterContraint"
    android:background="@color/colorBackgroundGrey"
    tools:context="com.example.hotel.view.Activities.Reservation">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/check_in_toolbar"
        android:layout_width="match_parent"
        android:background="@android:color/white"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/check_in_toolbar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/innerContraint"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="@+id/outterContraint"
            app:layout_constraintEnd_toEndOf="@+id/outterContraint"
            app:layout_constraintStart_toStartOf="@+id/outterContraint"
            app:layout_constraintTop_toBottomOf="@id/scrollview">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView_checkin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="10dp"
                app:layout_constraintEnd_toStartOf="@+id/cardView2"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/innerContraint">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="15dp"
                    tools:layout_editor_absoluteX="42dp"
                    tools:layout_editor_absoluteY="157dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:textColor="@android:color/black"
                        android:textStyle="bold"
                        android:paddingLeft="15dp"
                        android:paddingTop="15dp"
                        android:paddingRight="15dp"
                        android:text="Check In"
                        android:textSize="30dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorLightGrey" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/colorBlue"
                        android:text="Today"
                        android:textSize="25dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:layout_marginLeft="10dp"
                        android:text="2020"
                        android:textSize="20dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/cardView_checkin"
                app:layout_constraintTop_toTopOf="@+id/innerContraint">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="15dp"
                    tools:layout_editor_absoluteX="283dp"
                    tools:layout_editor_absoluteY="149dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:paddingLeft="15dp"
                        android:paddingTop="15dp"
                        android:paddingRight="15dp"
                        android:textColor="@android:color/black"
                        android:textStyle="bold"
                        android:text="Check Out"
                        android:textSize="30dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorLightGrey" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/colorBlue"
                        android:text="Today"
                        android:textSize="25dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:layout_marginLeft="10dp"
                        android:text="2020"
                        android:textSize="20dp" />
                </LinearLayout>


            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/room_cardview"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/cardView2"
                app:layout_constraintStart_toStartOf="@+id/cardView_checkin"
                app:layout_constraintTop_toBottomOf="@+id/cardView_checkin">


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/room_contraint_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/room_textview"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="Room"
                        android:textColor="@android:color/black"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/room_contraint_layout" />

                    <View
                        android:id="@+id/view_one"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorLightGrey"
                        app:layout_constraintTop_toBottomOf="@+id/room_textview" />

                    <TextView
                        android:id="@+id/room_adults_textview"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="15dp"
                        android:text="Adults"
                        android:textColor="@android:color/black"
                        android:textSize="20sp"
                        app:layout_constraintBottom_toTopOf="@+id/view_two"
                        app:layout_constraintEnd_toStartOf="@+id/btn_remove_adult"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/view_one" />

                    <ImageButton
                        android:id="@+id/btn_remove_adult"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="20dp"
                        android:background="@android:color/transparent"
                        android:src="@drawable/circle_remove"
                        app:layout_constraintBottom_toBottomOf="@+id/room_adults_textview"
                        app:layout_constraintEnd_toStartOf="@+id/adult_text_count"
                        app:layout_constraintTop_toTopOf="@+id/room_adults_textview" />

                    <TextView
                        android:id="@+id/adult_text_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:text="1"
                        android:textColor="@android:color/black"
                        android:textSize="20sp"
                        app:layout_constraintBottom_toBottomOf="@+id/btn_remove_adult"
                        app:layout_constraintRight_toLeftOf="@+id/btn_add_adult"
                        app:layout_constraintTop_toTopOf="@+id/btn_remove_adult" />

                    <ImageButton
                        android:id="@+id/btn_add_adult"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="20dp"
                        android:background="@android:color/transparent"
                        android:src="@drawable/ic_add_circle_add"
                        app:layout_constraintBottom_toBottomOf="@+id/adult_text_count"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/adult_text_count"
                        app:layout_constraintVertical_bias="1.0" />

                    <TextView
                        android:id="@+id/child_text_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:text="0"
                        android:textColor="@android:color/black"
                        android:textSize="20sp"
                        app:layout_constraintBottom_toBottomOf="@+id/btn_remove_children"
                        app:layout_constraintEnd_toStartOf="@+id/btn_add_children"
                        app:layout_constraintTop_toTopOf="@+id/btn_remove_children" />

                    <View
                        android:id="@+id/view_two"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorLightGrey"
                        app:layout_constraintBottom_toTopOf="@+id/room_children_textview"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/room_adults_textview" />

                    <TextView
                        android:id="@+id/room_children_textview"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:text="Children"
                        android:textColor="@android:color/black"
                        android:textSize="20sp"
                        app:layout_constraintBottom_toTopOf="@+id/view_three"
                        app:layout_constraintEnd_toStartOf="@+id/btn_remove_children"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/view_two" />

                    <ImageButton
                        android:id="@+id/btn_add_children"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:background="@android:color/transparent"
                        android:src="@drawable/ic_add_circle_add"
                        app:layout_constraintBottom_toBottomOf="@+id/child_text_count"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/child_text_count" />

                    <ImageButton
                        android:id="@+id/btn_remove_children"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:background="@android:color/transparent"
                        android:src="@drawable/circle_remove"
                        app:layout_constraintBottom_toBottomOf="@+id/room_children_textview"
                        app:layout_constraintEnd_toStartOf="@+id/child_text_count"
                        app:layout_constraintTop_toTopOf="@+id/room_children_textview" />

                    <View
                        android:id="@+id/view_three"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:visibility="gone"
                        android:background="@color/colorLightGrey"
                        app:layout_constraintBottom_toTopOf="@+id/text_child_1"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/room_children_textview" />


                    <TextView
                        android:id="@+id/text_child_1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:text="Age of child 1"
                        android:visibility="gone"
                        android:textSize="20sp"
                        app:layout_constraintBottom_toTopOf="@+id/view_four"
                        app:layout_constraintEnd_toStartOf="@+id/child_text_count_1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/view_three" />

                    <Spinner
                        android:id="@+id/spinner_child_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:backgroundTint="@color/colorBlue"
                        android:visibility="gone"
                        app:layout_constraintBottom_toBottomOf="@+id/child_text_count_1"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/child_text_count_1" />

                    <TextView
                        android:id="@+id/child_text_count_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        tools:text="1"
                        android:visibility="gone"
                        android:textSize="20sp"
                        app:layout_constraintBottom_toBottomOf="@+id/text_child_1"
                        app:layout_constraintEnd_toStartOf="@+id/spinner_child_1"
                        app:layout_constraintTop_toTopOf="@+id/text_child_1" />

                    <View
                        android:id="@+id/view_four"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorLightGrey"
                        android:visibility="gone"
                        app:layout_constraintBottom_toTopOf="@+id/text_child_2"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/text_child_1" />

                    <TextView
                        android:id="@+id/text_child_2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:text="Age of child 2"
                        android:textSize="20sp"
                        android:visibility="gone"
                        app:layout_constraintBottom_toTopOf="@+id/view_five"
                        app:layout_constraintEnd_toStartOf="@+id/child_text_count_2"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/view_four" />

                    <Spinner
                        android:id="@+id/spinner_child_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:visibility="gone"
                        android:backgroundTint="@color/colorBlue"
                        app:layout_constraintBottom_toBottomOf="@+id/child_text_count_2"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/child_text_count_2" />

                    <TextView
                        android:id="@+id/child_text_count_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        tools:text="1"
                        android:visibility="gone"
                        android:textSize="20sp"
                        app:layout_constraintBottom_toBottomOf="@+id/text_child_2"
                        app:layout_constraintEnd_toStartOf="@+id/spinner_child_2"
                        app:layout_constraintTop_toTopOf="@+id/text_child_2" />

                    <View
                        android:id="@+id/view_five"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:visibility="gone"
                        android:background="@color/colorLightGrey"
                        app:layout_constraintBottom_toTopOf="@id/text_child_3"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/text_child_2" />

                    <TextView
                        android:id="@+id/text_child_3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:text="Age of child 3"
                        android:textSize="20sp"
                        android:visibility="gone"
                        app:layout_constraintBottom_toTopOf="@+id/view_six"
                        app:layout_constraintEnd_toStartOf="@+id/child_text_count_3"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/view_five" />


                    <Spinner
                        android:id="@+id/spinner_child_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="4dp"
                        android:visibility="gone"
                        android:backgroundTint="@color/colorBlue"
                        app:layout_constraintBottom_toBottomOf="@+id/child_text_count_3"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/child_text_count_3" />

                    <TextView
                        android:id="@+id/child_text_count_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        tools:text="1"
                        android:textSize="20sp"
                        android:visibility="gone"
                        app:layout_constraintBottom_toBottomOf="@+id/text_child_3"
                        app:layout_constraintEnd_toStartOf="@+id/spinner_child_3"
                        app:layout_constraintTop_toTopOf="@+id/text_child_3" />

                    <View
                        android:id="@+id/view_six"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        app:layout_constraintBottom_toTopOf="@id/textView20"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/text_child_3" />


                    <TextView
                        android:id="@+id/textView20"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ADD ANOTHER ONE"
                        android:textSize="20sp"
                        android:textColor="@color/colorBlue"
                        android:textStyle="bold"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginRight="10dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/view_six" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <Button
        android:id="@+id/btn_show_deals"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SHOW DEALS"
        android:background="@color/colorBlue"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="@+id/outterContraint"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
