<resources xmlns:andriod="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Reservation" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="colorPrimaryDark">@color/colorBlue</item>
        <item name="titleTextColor">@color/colorBlue</item>
        <item name="homeAsUpIndicator">@drawable/ic_arrow_back_blue_24dp</item>
    </style>

    <style name="Calendar" parent="Reservation">
        <!-- Just incase I want to change some values unique to the calendar screen later -->
    </style>

    <style name="Standard" parent="AppTheme">

        <item name="titleTextColor">@android:color/white</item>
        <item name="homeAsUpIndicator">@drawable/ic_arrow_back_white_24dp</item>
        <item name="actionMenuTextColor">@android:color/white</item>
    </style>

    <style name="ExpandedImages" parent="AppTheme">

        <item name="colorPrimaryDark">@color/colorJetBlack</item>
        <item name="homeAsUpIndicator">@drawable/ic_arrow_back_white_24dp</item>
    </style>

</resources>
